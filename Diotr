        //tu jest znak =
        secnum = Double.parseDouble(jTextField1.getText());
        
        jTextField1.setText("");
        jLabel2.setText(String.valueOf(firstnum));
        jLabel3.setText(String.valueOf(secnum));
        
        
        
        result();
        listBuilder();
    }                                         

